<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tazq_Frontend.Views.AboutPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Background="{AppThemeBinding Light={StaticResource AppBackgroundBrushLight}, Dark={StaticResource AppBackgroundBrushDark}}">
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="10">
            <Frame Padding="0"
                   CornerRadius="12"
                   HasShadow="False"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#3C4D90" Offset="0.0" />
                            <GradientStop Color="#2B365E" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Button Text="Geri Dön"
                            Clicked="OnBackClicked"
                            FontFamily="RobotoRegular"
                            FontSize="15"
                            FontAttributes="Bold"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="48"
                            Padding="10"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="BorderWidth">
                                    <Setter.Value>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS" Value="0" />
                                            <On Platform="Android" Value="0" />
                                        </OnPlatform>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderColor">
                                    <Setter.Value>
                                        <OnPlatform x:TypeArguments="Color">
                                            <On Platform="iOS" Value="Transparent" />
                                            <On Platform="Android" Value="Transparent" />
                                        </OnPlatform>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Frame>
            <Label Text="Hakkında"
                   FontSize="24"
                   FontAttributes="Bold"
                   FontFamily="RobotoRegular"
                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                   HorizontalOptions="Center" />
            <Label Text="Tazq, yapılacaklarınızı sade ve hızlı bir şekilde düzenlemenize yardımcı olmak için tasarlandı. Uygulama .NET MAUI ve ASP.NET Core kullanılarak geliştirildi. Tasarımda modern arayüz trendlerinden ve Todoist ile Google Tasks gibi popüler uygulamalardan esinlenildi."
                   FontSize="15"
                   FontFamily="RobotoRegular"
                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                   LineHeight="1.2" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>