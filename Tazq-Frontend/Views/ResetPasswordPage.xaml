<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Tazq_Frontend.ViewModels"
             xmlns:converters="clr-namespace:Tazq_Frontend.Converters"
             x:Class="Tazq_Frontend.Views.ResetPasswordPage"
             BackgroundColor="#1F2D3D"
             Title="Şifre Sıfırla"
             Background="{AppThemeBinding Light={StaticResource AppBackgroundBrushLight}, Dark={StaticResource AppBackgroundBrushDark}}">


    <ContentPage.BindingContext>
        <viewModels:ResetPasswordViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ActivityIndicator IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="White"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           WidthRequest="40"
                           HeightRequest="40"
                           ZIndex="2" />

        <ScrollView>
            <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="30">
                <VerticalStackLayout WidthRequest="300"
                                     Padding="0"
                                     Spacing="24"
                                     IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}">

                    <Label Text="Yeni Şifre Belirle"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Start" 
                           FontFamily="RobotoRegular"/>

                    <Label Text="E-posta ile gelen token ile yeni şifrenizi oluşturun."
                           FontSize="14"
                           TextColor="#BBBBBB"
                           LineBreakMode="WordWrap"
                           HorizontalTextAlignment="Start" 
                           FontFamily="RobotoRegular"/>

                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="10"
                           Padding="10"
                           HasShadow="False"
                           BorderColor="#DDDDDD">
                        <Entry Placeholder="Yeni Şifre"
                               IsPassword="True"
                               Text="{Binding NewPassword}"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               PlaceholderColor="#999"
                               FontFamily="RobotoRegular"/>
                    </Frame>

                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="10"
                           Padding="10"
                           HasShadow="False"
                           BorderColor="#DDDDDD">
                        <Entry Placeholder="Yeni Şifre (Tekrar)"
                               IsPassword="True"
                               Text="{Binding ConfirmPassword}"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               PlaceholderColor="#999"
                               FontFamily="RobotoRegular"/>
                    </Frame>

                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="10"
                           Padding="10"
                           HasShadow="False"
                           BorderColor="#DDDDDD">
                        <Entry Placeholder="Şifre sıfırlama token"
                               Text="{Binding Token}"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               PlaceholderColor="#999"
                               FontFamily="RobotoRegular"/>
                    </Frame>

                    <Button Text="Şifreyi Sıfırla"
                            Command="{Binding ResetPasswordCommand}"
                            TextColor="#2C2C2C"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            Padding="12"
                            HeightRequest="48"
                            FontFamily="RobotoRegular">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#ECECEC" Offset="0.0"/>
                                <GradientStop Color="#DADADA" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>


                    <Label Text="{Binding StatusMessage}"
                           FontSize="13"
                           TextColor="Red"
                           FontAttributes="Italic"
                           HorizontalOptions="Start"
                           Margin="0,5,0,0" 
                           FontFamily="RobotoRegular"/>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>