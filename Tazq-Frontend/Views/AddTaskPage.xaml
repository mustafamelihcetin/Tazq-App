<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.AddTaskPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1F2D3D">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#1F2D3D" Offset="0.0" />
            <GradientStop Color="#3B5998" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <vm:AddTaskViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="Yeni Görev Ekle"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White" />

            <!-- Title Entry -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <Entry Placeholder="Başlık"
                       Text="{Binding Title}"
                       TextColor="Black" />
            </Frame>

            <!-- Description Editor -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <Editor Placeholder="Açıklama"
                        Text="{Binding Description}"
                        AutoSize="TextChanges"
                        TextColor="Black" />
            </Frame>

            <!-- DueDate Picker -->
            <DatePicker Date="{Binding DueDate}"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Format="dd MMMM yyyy" />

            <!-- Priority Picker -->
            <Picker Title="Öncelik Seçin"
                    ItemsSource="{Binding Priorities}"
                    SelectedItem="{Binding SelectedPriority}"
                    TextColor="White"
                    BackgroundColor="Transparent" />

            <!-- Tag Entry -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <Entry Placeholder="Etiket ekle"
                       Text="{Binding NewTag}"
                       Completed="OnTagCompleted"
                       TextColor="Black" />
            </Frame>

            <!-- Tags Display -->
            <Label Text="{Binding TagsDisplay}"
                   TextColor="White"
                   FontAttributes="Italic" />

            <!-- Save Button -->
            <Button Text="Görevi Kaydet"
                    Command="{Binding SaveTaskCommand}"
                    TextColor="#2C2C2C"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="12"
                    HeightRequest="48">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#ECECEC" Offset="0.0"/>
                        <GradientStop Color="#DADADA" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>