<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.AddTaskPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1F2D3D">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#1F2D3D" Offset="0.0" />
            <GradientStop Color="#6A85B6" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <vm:AddTaskViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="Yeni Görev Ekle"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White" />

            <!-- Title Entry -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <VerticalStackLayout>
                    <Entry Placeholder="Başlık"
                           Text="{Binding Title}"
                           TextColor="Black"
                           MaxLength="80" />
                    <Label Text="{Binding TitleWarning}"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding IsTitleLimitExceeded, Mode=OneWay}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Description Editor -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <VerticalStackLayout>
                    <Editor Placeholder="Açıklama"
                            Text="{Binding Description}"
                            AutoSize="TextChanges"
                            TextColor="Black"
                            HeightRequest="100"
                            MaxLength="300" />
                    <Label Text="{Binding DescriptionWarning}"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding IsDescriptionLimitExceeded, Mode=OneWay}" />
                </VerticalStackLayout>
            </Frame>

            <!-- DueDate Picker (with toggle and time) -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <VerticalStackLayout>
                    <Label Text="Son Tarih"
                           FontSize="14"
                           TextColor="Black"
                           Margin="0,0,0,6" />
                    <DatePicker Date="{Binding DueDate}"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                Format="dd MMMM yyyy" />

                    <HorizontalStackLayout Margin="0,6,0,0">
                        <CheckBox IsChecked="{Binding EnableTime}" />
                        <Label Text="Saat belirle" VerticalOptions="Center" TextColor="Black" Margin="6,0,0,0" />
                    </HorizontalStackLayout>

                    <!-- TimePicker only visible when checkbox is checked -->
                    <Frame IsVisible="{Binding EnableTime}" HorizontalOptions="Start" WidthRequest="130" Padding="2" HasShadow="False" BackgroundColor="Transparent">
                        <TimePicker Time="{Binding SelectedTime, Mode=TwoWay}"
                                    HorizontalOptions="Center"
                                    TextColor="Black"
                                    BackgroundColor="White"
                                    HeightRequest="40"
                                    WidthRequest="80"
                                    Margin="0,2,0,0" />
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Priority Picker -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <Picker Title="Öncelik Seçin"
                        ItemsSource="{Binding Priorities}"
                        SelectedItem="{Binding SelectedPriority}"
                        TextColor="Black"
                        BackgroundColor="Transparent" />
            </Frame>

            <!-- Tag Entry -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="False" Padding="10">
                <VerticalStackLayout>
                    <Entry Placeholder="Etiket ekle"
                           Text="{Binding NewTag}"
                           Completed="OnTagCompleted"
                           TextColor="Black"
                           MaxLength="30" />
                    <Label Text="{Binding TagWarning}"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding IsTagLimitExceeded, Mode=OneWay}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Tags Display -->
            <Label Text="{Binding TagsDisplay}"
                   TextColor="White"
                   FontAttributes="Italic" />

            <!-- Save Button -->
            <Button Text="Görevi Kaydet"
                    Command="{Binding SaveTaskCommand}"
                    TextColor="#2C2C2C"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="12"
                    HeightRequest="48">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#ECECEC" Offset="0.0"/>
                        <GradientStop Color="#DADADA" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>