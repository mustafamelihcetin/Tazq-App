<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.AddTaskPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1F2D3D">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#1F2D3D" Offset="0.0" />
            <GradientStop Color="#6A85B6" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <vm:AddTaskViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page title -->
        <Label Grid.Row="0"
               Text="Yeni Görev Ekle"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               FontFamily="RobotoRegular"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <!-- Form grid -->
        <Grid Grid.Row="1" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <Frame Grid.Row="0"
                   BackgroundColor="White"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Entry Grid.Row="0"
                           Placeholder="Başlık"
                           Text="{Binding Title}"
                           TextColor="Black"
                           MaxLength="80"
                           FontFamily="RobotoRegular"/>
                    <Label Grid.Row="1"
                           Text="{Binding TitleWarning}"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding IsTitleLimitExceeded}"
                           FontFamily="RobotoRegular"/>
                </Grid>
            </Frame>

            <!-- Description -->
            <Frame Grid.Row="1"
                   BackgroundColor="White"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Editor Grid.Row="0"
                            Placeholder="Açıklama"
                            Text="{Binding Description}"
                            AutoSize="TextChanges"
                            TextColor="Black"
                            MaxLength="300"
                            FontFamily="RobotoRegular"/>
                    <Label Grid.Row="1"
                           Text="{Binding DescriptionWarning}"
                           TextColor="Red"
                           FontSize="12"
                           IsVisible="{Binding IsDescriptionLimitExceeded}"
                           FontFamily="RobotoRegular"/>
                </Grid>
            </Frame>

            <!-- Date & Time -->
            <Frame Grid.Row="2"
                   BackgroundColor="White"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False">
                <VerticalStackLayout Spacing="6">
                    <DatePicker Date="{Binding DueDate}"
                                Format="dd MMMM yyyy"
                                TextColor="Black"
                                FontFamily="RobotoRegular" />
                    <HorizontalStackLayout>
                        <CheckBox IsChecked="{Binding EnableTime}" />
                        <Label Text="Saat belirle"
                               TextColor="Black"
                               FontFamily="RobotoRegular"
                               VerticalOptions="Center"
                               Margin="6,0,0,0"/>
                    </HorizontalStackLayout>
                    <TimePicker Time="{Binding SelectedTime}"
                                IsVisible="{Binding EnableTime}"
                                TextColor="Black"
                                FontFamily="RobotoRegular" />
                </VerticalStackLayout>
            </Frame>

            <!-- Priority -->
            <Frame Grid.Row="3"
                   BackgroundColor="White"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False">
                <Picker Title="Öncelik Seçin"
                        ItemsSource="{Binding Priorities}"
                        SelectedItem="{Binding SelectedPriority}"
                        TextColor="Black"
                        FontFamily="RobotoRegular" />
            </Frame>

            <!-- Tag -->
            <Frame Grid.Row="4"
                   BackgroundColor="White"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="False">
                <Entry Placeholder="Etiket ekle"
                       Text="{Binding NewTag}"
                       Completed="OnTagCompleted"
                       TextColor="Black"
                       MaxLength="30"
                       FontFamily="RobotoRegular"/>
            </Frame>

            <!-- Tag display -->
            <Label Grid.Row="5"
                   Text="{Binding TagsDisplay}"
                   TextColor="White"
                   FontAttributes="Italic"
                   FontFamily="RobotoItalic"
                   HorizontalOptions="Center"/>
        </Grid>

        <!-- Save button -->
        <Button Grid.Row="2"
                Text="Görevi Kaydet"
                Command="{Binding SaveTaskCommand}"
                TextColor="#2C2C2C"
                FontAttributes="Bold"
                CornerRadius="10"
                FontFamily="RobotoRegular"
                HeightRequest="48"
                HorizontalOptions="Fill">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#ECECEC" Offset="0.0"/>
                    <GradientStop Color="#DADADA" Offset="1.0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</ContentPage>