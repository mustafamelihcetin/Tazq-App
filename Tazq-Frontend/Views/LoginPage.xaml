<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.LoginPage"
             Title="Giriş Yap"
             BackgroundColor="#1A237E">
    <!-- Dark Blue Background -->

    <ContentPage.BindingContext>
        <vm:AuthViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Logo and Title -->
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="app_logo.png" WidthRequest="100" HeightRequest="100" />
            <Label Text="Tazq App" FontSize="26" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
            <Label Text="Yapılacaklarını Yönet" FontSize="16" TextColor="White" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <!-- Login Fields -->
        <VerticalStackLayout Grid.Row="1" Spacing="12" HorizontalOptions="Fill" VerticalOptions="Center">
            <Frame Padding="10" CornerRadius="8" BackgroundColor="White">
                <Entry Placeholder="E-posta" Text="{Binding Email}" Keyboard="Email" TextColor="Black" PlaceholderColor="Gray"/>
            </Frame>

            <Frame Padding="10" CornerRadius="8" BackgroundColor="White">
                <Entry Placeholder="Şifre" Text="{Binding Password}" IsPassword="True" TextColor="Black" PlaceholderColor="Gray"/>
            </Frame>

            <Button Text="Giriş Yap"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="Purple"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="12"
                    CornerRadius="8"/>
        </VerticalStackLayout>

        <!-- Social Login -->
        <VerticalStackLayout Grid.Row="2" Spacing="10" Padding="10">
            <Label Text="veya" FontSize="14" TextColor="White" HorizontalTextAlignment="Center"/>

            <!-- Google Login Button -->
            <Grid BackgroundColor="White"
                  Padding="10"
                  Margin="10"
                  HorizontalOptions="Fill"
                  GestureRecognizers="{TapGestureRecognizer Tapped='OnGoogleLoginClicked'}">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image Source="google_logo.png" WidthRequest="24" HeightRequest="24"/>
                    <Label Text=" Google ile Giriş Yap" TextColor="Black" FontAttributes="Bold" Margin="10,0,0,0"/>
                </HorizontalStackLayout>
            </Grid>

            <!-- Apple Login Button -->
            <Grid BackgroundColor="Black"
                  Padding="10"
                  Margin="10"
                  HorizontalOptions="Fill"
                  GestureRecognizers="{TapGestureRecognizer Tapped='OnAppleLoginClicked'}">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image Source="apple_logo.png" WidthRequest="24" HeightRequest="24"/>
                    <Label Text=" Apple ile Giriş Yap" TextColor="White" FontAttributes="Bold" Margin="10,0,0,0"/>
                </HorizontalStackLayout>
            </Grid>
        </VerticalStackLayout>

    </Grid>

</ContentPage>
