<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#121212">

    <!-- Background Gradient (More Professional) -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#1E2A47" Offset="0.0" />
            <!-- Dark Navy Blue -->
            <GradientStop Color="#3A506B" Offset="0.5" />
            <!-- Muted Steel Blue -->
            <GradientStop Color="#6C91C2" Offset="1.0" />
            <!-- Soft Blue-Grey -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <vm:AuthViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- LOGO (Revised) -->
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="tazq_logo.png" WidthRequest="140" HeightRequest="50"/>
            <Label Text="Yapılacaklarını Yönet" FontSize="14" TextColor="#A0A0A0" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <!-- Input Fields -->
        <VerticalStackLayout Grid.Row="1" Spacing="12" HorizontalOptions="Center">
            <Frame Padding="12" CornerRadius="10" BackgroundColor="White" HasShadow="False"
                   WidthRequest="{OnIdiom Phone=320, Tablet=400, Desktop=450}">
                <Entry Placeholder="E-posta" Text="{Binding Email}" Keyboard="Email" TextColor="Black" PlaceholderColor="#A0A0A0"/>
            </Frame>

            <Frame Padding="12" CornerRadius="10" BackgroundColor="White" HasShadow="False"
                   WidthRequest="{OnIdiom Phone=320, Tablet=400, Desktop=450}">
                <Entry Placeholder="Şifre" Text="{Binding Password}" IsPassword="True" TextColor="Black" PlaceholderColor="#A0A0A0"/>
            </Frame>

            <Button Text="Giriş Yap"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#407BFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="12"
                    CornerRadius="10"
                    HeightRequest="45"
                    WidthRequest="{OnIdiom Phone=320, Tablet=400, Desktop=450}"/>
        </VerticalStackLayout>

        <!-- Social Login -->
        <VerticalStackLayout Grid.Row="2" Spacing="10" Padding="10" HorizontalOptions="Center">
            <Label Text="veya" FontSize="12" TextColor="#A0A0A0" HorizontalTextAlignment="Center"/>

            <!-- Google Login -->
            <Frame BackgroundColor="White"
                   Padding="10"
                   CornerRadius="10"
                   HasShadow="False"
                   WidthRequest="{OnIdiom Phone=320, Tablet=400, Desktop=450}">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Image Source="google_logo.png" WidthRequest="24" HeightRequest="24"/>
                    <Label Text="Google ile Giriş Yap" TextColor="Black" FontAttributes="Bold"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Apple Login -->
            <Frame BackgroundColor="Black"
                   Padding="10"
                   CornerRadius="10"
                   HasShadow="False"
                   WidthRequest="{OnIdiom Phone=320, Tablet=400, Desktop=450}">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Image Source="apple_logo.png" WidthRequest="24" HeightRequest="24"/>
                    <Label Text="Apple ile Giriş Yap" TextColor="White" FontAttributes="Bold"/>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
