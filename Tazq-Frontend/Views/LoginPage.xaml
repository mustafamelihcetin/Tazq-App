<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.LoginPage"
             Title="Giriş Yap"
             BackgroundColor="#283593">
    <!-- Göz yormayan, koyu ama modern mavi arka plan -->

    <ContentPage.BindingContext>
        <vm:AuthViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="30" BackgroundColor="#071952">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Logo ve Başlık -->
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="Tazq_logo.png" WidthRequest="120" HeightRequest="40" Margin="0,0,0,10"/>
            <Label Text="Tazq App" FontSize="26" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
            <Label Text="Yapılacaklarını Yönet" FontSize="16" TextColor="#D1C4E9" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <!-- Giriş Alanları -->
        <VerticalStackLayout Grid.Row="1" Spacing="10" HorizontalOptions="Fill" VerticalOptions="Center">
            <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                <Entry Placeholder="E-posta" Text="{Binding Email}" Keyboard="Email" TextColor="Black" PlaceholderColor="Gray"/>
            </Frame>

            <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                <Entry Placeholder="Şifre" Text="{Binding Password}" IsPassword="True" TextColor="Black" PlaceholderColor="Gray"/>
            </Frame>

            <Button Text="Giriş Yap"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#088395"
                    TextColor="White"
                    FontAttributes="Bold"
                    Padding="12"
                    CornerRadius="10"/>
        </VerticalStackLayout>

        <!-- Sosyal Medya Girişleri -->
        <VerticalStackLayout Grid.Row="2" Spacing="12" Padding="10">
            <Label Text="veya" FontSize="14" TextColor="White" HorizontalTextAlignment="Center"/>

            <!-- Google Girişi -->
            <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image Source="google_logo.png" WidthRequest="20" HeightRequest="20"/>
                    <Label Text=" Google ile Giriş Yap" TextColor="Black" FontAttributes="Bold" Margin="10,0,0,0"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Apple Girişi -->
            <Frame Padding="10" CornerRadius="10" BackgroundColor="Black" HasShadow="True">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image Source="apple_logo.png" WidthRequest="20" HeightRequest="20"/>
                    <Label Text=" Apple ile Giriş Yap" TextColor="White" FontAttributes="Bold" Margin="10,0,0,0"/>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>

    </Grid>

</ContentPage>
