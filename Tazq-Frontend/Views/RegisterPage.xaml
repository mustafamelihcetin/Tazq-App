<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.RegisterPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Background="{AppThemeBinding Light={StaticResource AppBackgroundBrushLight}, Dark={StaticResource AppBackgroundBrushDark}}">

    <!-- ViewModel Binding Context -->
    <ContentPage.BindingContext>
        <vm:AuthViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Logo and Title -->
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="tazq_white_logo.svg" WidthRequest="130" HeightRequest="45" />
            <Label Text="Hesabını Oluştur"
                   FontSize="16"
                   LineHeight="1.2"
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}"
                   HorizontalTextAlignment="Center"
                   Margin="0,5,0,40" FontFamily="RobotoRegular"/>
        </VerticalStackLayout>

        <!-- Input Fields and Buttons -->
        <VerticalStackLayout Grid.Row="1" Spacing="12" HorizontalOptions="Center"
                             WidthRequest="{OnPlatform Android=320, iOS=350, WinUI=400}">

            <!-- Name Input -->
            <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                <Entry Placeholder="Adınız"
                       TextColor="Black"
                       PlaceholderColor="#A5A5A5"
                       Text="{Binding Name}"
                       FontFamily="RobotoRegular"/>
            </Frame>

            <!-- Email Input -->
            <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                <Entry Placeholder="E-posta"
                       Keyboard="Email"
                       TextColor="Black"
                       PlaceholderColor="#A5A5A5"
                       Text="{Binding Email}"
                       FontFamily="RobotoRegular"/>
            </Frame>

            <!-- Password Input -->
            <Frame Padding="10" CornerRadius="10" BackgroundColor="White" HasShadow="True">
                <Entry Placeholder="Şifre"
                       IsPassword="True"
                       TextColor="Black"
                       PlaceholderColor="#A5A5A5"
                       Text="{Binding Password}"
                       FontFamily="RobotoRegular"/>
            </Frame>

            <!-- Register Button -->
            <Frame BackgroundColor="Transparent" Padding="0" CornerRadius="12" HasShadow="True"
                   Margin="0,5,0,15">
                <Button Text="Kaydol"
                        Command="{Binding RegisterCommand}"
                        TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray200}}"
                        FontAttributes="Bold"
                        Padding="12"
                        CornerRadius="10"
                        HeightRequest="48"
                        FontFamily="RobotoRegular">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#ECECEC" Offset="0.0"/>
                            <GradientStop Color="#DADADA" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </Frame>

            <!-- Back to Login -->
            <Label Text="Zaten bir hesabın var mı?"
                   FontSize="14"
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}"
                   HorizontalTextAlignment="Center"
                   Margin="0,5,0,5"
                   FontFamily="RobotoRegular"/>

            <Frame BackgroundColor="Transparent" Padding="0" CornerRadius="12" HasShadow="True"
                   Margin="0,5,0,15">
                <Button Text="Giriş Yap"
                        Command="{Binding NavigateToLoginCommand}"
                        TextColor="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray200}}"
                        FontAttributes="Bold"
                        Padding="12"
                        CornerRadius="10"
                        HeightRequest="48"
                        FontFamily="RobotoRegular">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#C4C4C4" Offset="0.0"/>
                            <GradientStop Color="#A9A9A9" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </Frame>

        </VerticalStackLayout>

    </Grid>
</ContentPage>