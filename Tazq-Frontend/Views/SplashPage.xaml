<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Tazq_Frontend.Views"
             x:Class="Tazq_Frontend.Views.SplashPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#212121" Offset="0.0" />
            <GradientStop Color="#2B2B2B" Offset="0.5" />
            <GradientStop Color="#3A3A3A" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid x:Name="RootGrid">
        <Image x:Name="Logo"
               Source="tazq_white_logo.png"
               WidthRequest="160"
               HeightRequest="160"
               Opacity="0"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Grid>
</ContentPage>