<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             xmlns:converters="clr-namespace:Tazq_Frontend.Converters"
             x:Class="Tazq_Frontend.Views.HomePage"
             x:Name="HomePageRoot"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1F2D3D">

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#1F2D3D" Offset="0.0" />
            <GradientStop Color="#3B5998" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Menu -->
        <Grid Grid.Row="0" ColumnSpacing="10" Padding="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Görevlerim"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   Grid.Column="0" />

            <Button Text="Ayarlar"
                    Command="{Binding SettingsCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#E0E0E0"
                    FontAttributes="Bold"
                    FontSize="14"
                    Grid.Column="1"
                    Padding="6" />

            <Button Text="Çıkış"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#E0E0E0"
                    FontAttributes="Bold"
                    FontSize="14"
                    Grid.Column="2"
                    Padding="6" />
        </Grid>

        <!-- Add Task Button -->
        <Button Grid.Row="1"
                Text="Yeni Görev Ekle"
                Command="{Binding GoToAddTaskPageCommand}"
                TextColor="#2C2C2C"
                FontAttributes="Bold"
                FontSize="16"
                Padding="12"
                HeightRequest="48"
                Margin="0,0,0,20"
                CornerRadius="10">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#ECECEC" Offset="0.0"/>
                    <GradientStop Color="#DADADA" Offset="1.0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <!-- Task List & Loading -->
        <Grid Grid.Row="2">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="White"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               WidthRequest="40"
                               HeightRequest="40" />

            <CollectionView ItemsSource="{Binding Tasks}"
                            IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            EmptyView="Henüz görev eklenmedi.">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="14"
                               BackgroundColor="#2C3E50"
                               Padding="16"
                               Margin="0,0,0,16"
                               HasShadow="True"
                               Opacity="0.95">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White" />

                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#D0D0D0"
                                       IsVisible="{Binding Description, Converter={StaticResource NullOrEmptyToBoolConverter}}" />

                                <Label Text="{Binding DueDate, StringFormat='Son Tarih: {0:dd MMM yyyy}'}"
                                       FontSize="12"
                                       TextColor="#B0B0B0"
                                       IsVisible="{Binding DueDate.HasValue}" />

                                <Label Text="{Binding Tags, Converter={StaticResource TagsArrayToStringConverter}}"
                                       FontSize="12"
                                       TextColor="#AAAAAA"
                                       IsVisible="{Binding Tags.Count, Converter={StaticResource IntGreaterThanZeroConverter}}" />

                                <Frame Padding="4,2"
                                       BackgroundColor="#546E7A"
                                       CornerRadius="6"
                                       HorizontalOptions="End"
                                       HasShadow="False">
                                    <Label Text="{Binding Priority, Converter={StaticResource PriorityToTurkishConverter}}"
                                           FontSize="12"
                                           TextColor="White"
                                           FontAttributes="Bold" />
                                </Frame>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>