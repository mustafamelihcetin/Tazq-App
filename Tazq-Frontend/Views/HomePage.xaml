<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             xmlns:converters="clr-namespace:Tazq_Frontend.Converters"
             x:Class="Tazq_Frontend.Views.HomePage"
             x:Name="HomePageRoot"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#212121" Offset="0.0" />
            <GradientStop Color="#2B2B2B" Offset="0.5" />
            <GradientStop Color="#3A3A3A" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToShowPastTasksTextConverter x:Key="BoolToShowPastTasksTextConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:NullOrEmptyToBoolConverter x:Key="NullOrEmptyToBoolConverter" />
            <converters:TagsArrayToStringConverter x:Key="TagsArrayToStringConverter" />
            <converters:PriorityToTurkishConverter x:Key="PriorityToTurkishConverter" />
            <converters:BoolToBorderColorConverter x:Key="BoolToBorderColorConverter" />
            <converters:PriorityToColorConverter x:Key="PriorityToColorConverter" />
            <converters:IsCompletedToIconConverter x:Key="IsCompletedToIconConverter" />
            <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter" />
            <converters:IsCompletedToColorConverter x:Key="IsCompletedToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <AbsoluteLayout>

        <Grid Padding="24" RowSpacing="20" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid x:Name="HeaderGrid" Grid.Row="0" ColumnSpacing="12" Padding="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <Label Text="Ajandam"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center" />

                <Frame Grid.Column="2"
                       Padding="0"
                       CornerRadius="24"
                       HasShadow="False"
                       HeightRequest="40"
                       WidthRequest="40"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       BackgroundColor="#2C2C2E"
                       BorderColor="#444"
                       Margin="0,0,4,0">
                    <ImageButton Source="settings_icon.png"
                                 BackgroundColor="Transparent"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 Padding="4"
                                 Command="{Binding SettingsCommand}"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center" />
                </Frame>


            </Grid>

            <Grid Grid.Row="1" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Add Task Button Frame -->
                <Frame x:Name="AddTaskFrame" Grid.Column="1" Padding="0" CornerRadius="12" HasShadow="False" BackgroundColor="Transparent">
                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#3C4D90" Offset="0.0" />
                                <GradientStop Color="#2B365E" Offset="1.0" />
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Button x:Name="AddTaskButton"
                                Text="Yeni Görev Ekle"
                                Command="{Binding GoToAddTaskPageCommand}"
                                FontAttributes="Bold"
                                FontSize="15"
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="48"
                                FontFamily="RobotoRegular"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HorizontalOptions="Center"/>    
                    </Grid>
                </Frame>

                <!-- Filter Button -->
                <Frame Grid.Column="3"
                       Padding="0"
                       CornerRadius="24"
                       HasShadow="False"
                       HeightRequest="40"
                       WidthRequest="40"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       BackgroundColor="#2C2C2E"
                       BorderColor="#444"
                       Margin="0,0,4,0">
                    <ImageButton Source="filter_icon_white.png"
                                 Command="{Binding ToggleFilterPanelCommand}"
                                 BackgroundColor="Transparent"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 Padding="4"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                </Frame>

            </Grid>

            <!-- Task List -->
            <RefreshView x:Name="MainRefreshView"
                         Grid.Row="2"
                         Command="{Binding LoadTasksCommand}"
                         IsRefreshing="{Binding IsLoading}"
                         Refreshing="MainRefreshView_Refreshing">

                <CollectionView x:Name="MainCollectionView"
                                ItemsSource="{Binding FilteredTasks}"
                                ItemsLayout="VerticalList"
                                EmptyView="Henüz görev eklenmedi.">

                    <CollectionView.Header>
                        <Label x:Name="ShowPastTasksLabel"
                               Text="{Binding ShowPastTasks, Converter={StaticResource BoolToShowPastTasksTextConverter}}"
                               TextColor="#90CAF9"
                               FontAttributes="Bold"
                               FontSize="14"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10"
                               IsVisible="{Binding IsScrolledDown}"
                               FontFamily="RobotoRegular">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TogglePastTasksCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </CollectionView.Header>


                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems Mode="Reveal">
                                        <SwipeItemView>
                                            <ImageButton
                                                Source="edit_icon.png"
                                                BackgroundColor="Transparent"
                                                HeightRequest="40"
                                                WidthRequest="40"
                                                Padding="8"
                                                Margin="10"
                                                Command="{Binding Path=BindingContext.EditTaskCommand, Source={x:Reference HomePageRoot}}"
                                                CommandParameter="{Binding .}" />
                                        </SwipeItemView>
                                        <SwipeItemView>
                                            <ImageButton
                                                Source="delete_icon.png"
                                                BackgroundColor="Transparent"
                                                HeightRequest="40"
                                                WidthRequest="40"
                                                Padding="8"
                                                Margin="10"
                                                Command="{Binding Path=BindingContext.DeleteTaskCommand, Source={x:Reference HomePageRoot}}"
                                                CommandParameter="{Binding .}" />
                                        </SwipeItemView>
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Frame CornerRadius="12"
                                       BackgroundColor="#2C2C2E"
                                       Padding="16"
                                       Margin="0,0,0,12"
                                       HasShadow="True"
                                       BorderColor="{Binding IsToday, Converter={StaticResource BoolToBorderColorConverter}}">

                                    <Frame.Shadow>
                                        <Shadow Brush="Black" Opacity="0.2" Offset="0,2" Radius="4"/>
                                    </Frame.Shadow>

                                    <Grid RowSpacing="6">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Title -->
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Title}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2" />

                                        <Frame Grid.Row="0" Grid.Column="1"
                                               Padding="4,2"
                                               BackgroundColor="{Binding PriorityEnum, Converter={StaticResource PriorityToColorConverter}}"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               Margin="8,2,0,0"
                                               VerticalOptions="Start"
                                               HorizontalOptions="End">
                                            <Label Text="{Binding PriorityEnum, Converter={StaticResource PriorityToTurkishConverter}}"
                                                   FontSize="10"
                                                   TextColor="White"
                                                   FontAttributes="Bold"/>
                                        </Frame>

                                        <!-- Description -->
                                        <Label Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="{Binding Description}"
                                               FontSize="13"
                                               TextColor="#D0D0D0"
                                               LineHeight="1.1"
                                               MaxLines="3"
                                               LineBreakMode="TailTruncation"
                                               IsVisible="{Binding Description, Converter={StaticResource NullOrEmptyToBoolConverter}}" />

                                        <!-- Tarih ve Tamamlandı aynı satırda -->
                                        <Grid Grid.Row="2" Grid.ColumnSpan="2" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0"
                                                   Text="{Binding DueDateTimeCombined, StringFormat='Son Tarih: {0:dd MMM yyyy HH\\:mm}'}"
                                                   FontSize="13"
                                                   TextColor="#B0BEC5"
                                                   IsVisible="{Binding HasDueDate}" />

                                            <HorizontalStackLayout Grid.Column="1"
                                                                   Spacing="6"
                                                                   VerticalOptions="Center">
                                                <HorizontalStackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer 
                                                        Command="{Binding Path=BindingContext.ToggleTaskCompletionCommand, Source={x:Reference HomePageRoot}}"
                                                        CommandParameter="{Binding .}" />
                                                </HorizontalStackLayout.GestureRecognizers>

                                                <Image Source="{Binding IsCompleted, Converter={StaticResource IsCompletedToIconConverter}}"
                                                       WidthRequest="20"
                                                       HeightRequest="20"
                                                       VerticalOptions="Center" />

                                                <Label Text="{Binding IsCompleted, Converter={StaticResource BoolToStatusTextConverter}}"
                                                       FontSize="13"
                                                       TextColor="{Binding IsCompleted, Converter={StaticResource IsCompletedToColorConverter}}"
                                                       VerticalOptions="Center"
                                                       FontAttributes="Bold"
                                                       FontFamily="RobotoRegular"/>
                                            </HorizontalStackLayout>
                                        </Grid>

                                        <!-- Tags -->
                                        <Label Grid.Row="3" Grid.ColumnSpan="2"
                                               Text="{Binding Tags, Converter={StaticResource TagsArrayToStringConverter}}"
                                               FontSize="13"
                                               TextColor="#AAAAAA"
                                               IsVisible="{Binding Tags.Count, Converter={StaticResource NullOrEmptyToBoolConverter}}" />
                                    </Grid>
                                </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

        <!-- Modal Filter Panel -->
        <Frame BackgroundColor="#2C2C2E"
               Padding="16"
               CornerRadius="12"
               BorderColor="#444"
               HasShadow="True"
               IsVisible="{Binding IsFilterPanelVisible}"
               AbsoluteLayout.LayoutBounds="0.5,0.2,0.9,-1"
               AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
               ZIndex="9999">
            <VerticalStackLayout Spacing="16">

                <Label Text="Tamamlanma Durumu" FontSize="14" TextColor="White" FontAttributes="Bold"/>
                <HorizontalStackLayout Spacing="12">
                    <RadioButton Content="Tümü"
                                 GroupName="Status"
                                 Value="{x:Null}"
                                 IsChecked="{Binding FilterByCompleted, Mode=TwoWay}"
                                 CheckedChanged="OnFilterChanged"/>
                    <RadioButton Content="Tamamlandı"
                                 GroupName="Status"
                                 Value="true"
                                 IsChecked="{Binding FilterByCompleted, Mode=TwoWay}"
                                 CheckedChanged="OnFilterChanged"/>
                    <RadioButton Content="Tamamlanmadı"
                                 GroupName="Status"
                                 Value="false"
                                 IsChecked="{Binding FilterByCompleted, Mode=TwoWay}"
                                 CheckedChanged="OnFilterChanged"/>
                </HorizontalStackLayout>

                <Label Text="Etiket Ara" FontSize="14" TextColor="White" FontAttributes="Bold"/>
                <Entry Placeholder="Etikete göre filtrele..."
                       Text="{Binding FilterTag, Mode=TwoWay}"
                       PlaceholderColor="#AAAAAA"
                       TextColor="White"
                       BackgroundColor="#3A3A3A"
                       HeightRequest="36"
                       FontSize="13"
                       FontFamily="RobotoRegular"
                       TextChanged="OnFilterChanged"/>
            </VerticalStackLayout>
        </Frame>
    </AbsoluteLayout>
</ContentPage>