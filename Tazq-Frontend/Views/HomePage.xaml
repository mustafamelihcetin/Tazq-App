<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Tazq_Frontend.ViewModels"
             x:Class="Tazq_Frontend.Views.HomePage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1F2D3D">

    <!-- Background Gradient -->
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#1F2D3D" Offset="0.0" />
            <GradientStop Color="#6A85B6" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Menu -->
        <Grid Grid.Row="0" ColumnSpacing="10" Padding="0,10,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Görevlerim"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   Grid.Column="0" />

            <Button Text="Ayarlar"
                    Command="{Binding SettingsCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Grid.Column="1"
                    Padding="5" />

            <Button Text="Çıkış Yap"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Grid.Column="2"
                    Padding="5" />
        </Grid>

        <!-- Task List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Tasks}"
                        EmptyView="Henüz bir göreviniz yok."
                        VerticalOptions="Fill">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="12"
                           BackgroundColor="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"
                           Padding="15"
                           Margin="0,0,0,15"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="6">

                            <Label Text="{Binding Title}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333" />

                            <Label Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="#555"
                                   IsVisible="{Binding Description, Converter={StaticResource NullOrEmptyToBoolConverter}}" />

                            <Label Text="{Binding DueDate, StringFormat='Son Tarih: {0:dd MMM yyyy}'}"
                                   FontSize="12"
                                   TextColor="#666"
                                   IsVisible="{Binding DueDate.HasValue}" />

                            <Label Text="{Binding Tags, Converter={StaticResource TagsArrayToStringConverter}}"
                                   FontSize="12"
                                   TextColor="#777"
                                   IsVisible="{Binding Tags.Length, Converter={StaticResource IntGreaterThanZeroConverter}}" />

                            <Label Text="{Binding Priority}"
                                   FontSize="12"
                                   TextColor="#D9534F"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End" />

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>