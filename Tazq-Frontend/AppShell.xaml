<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Tazq_Frontend.Views"
    xmlns:helpers="clr-namespace:Tazq_Frontend.Helpers"
    x:Class="Tazq_Frontend.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Route="{x:Static helpers:RouteNames.SplashPage}" ContentTemplate="{DataTemplate views:SplashPage}" />

    <ShellContent Route="{x:Static helpers:RouteNames.LoginPage}" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="{x:Static helpers:RouteNames.RegisterPage}" ContentTemplate="{DataTemplate views:RegisterPage}" />
    <ShellContent Route="{x:Static helpers:RouteNames.ResetPasswordPage}" ContentTemplate="{DataTemplate views:ResetPasswordPage}" />
    <ShellContent Route="{x:Static helpers:RouteNames.HomePage}" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="{x:Static helpers:RouteNames.AddTaskPage}" ContentTemplate="{DataTemplate views:AddTaskPage}" />
    <ShellContent Route="{x:Static helpers:RouteNames.EditTaskPage}" ContentTemplate="{DataTemplate views:EditTaskPage}" />
    <ShellContent Route="{x:Static helpers:RouteNames.NotificationSettingsPage}" ContentTemplate="{DataTemplate views:NotificationSettingsPage}" />
    <ShellContent Route="{x:Static helpers:RouteNames.AboutPage}" ContentTemplate="{DataTemplate views:AboutPage}" />
</Shell>