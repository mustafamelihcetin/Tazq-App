<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Tazq_Frontend.Views"
    x:Class="Tazq_Frontend.AppShell"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Route="SplashPage" ContentTemplate="{DataTemplate views:SplashPage}" />

    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate views:RegisterPage}" />
    <ShellContent Route="ResetPasswordPage" ContentTemplate="{DataTemplate views:ResetPasswordPage}" />
    <ShellContent Route="HomePage" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="AddTaskPage" ContentTemplate="{DataTemplate views:AddTaskPage}" />
    <ShellContent Route="EditTaskPage" ContentTemplate="{DataTemplate views:EditTaskPage}" />
</Shell>